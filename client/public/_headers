# Cache headers for GitHub Pages
# Static assets with content hashing can be cached for 1 year
/assets/*
  Cache-Control: public, max-age=31536000, immutable

# Images with content hashing can be cached for 1 year
/*.webp
  Cache-Control: public, max-age=31536000, immutable

/*.png
  Cache-Control: public, max-age=31536000, immutable

/*.jpg
  Cache-Control: public, max-age=31536000, immutable

/*.jpeg
  Cache-Control: public, max-age=31536000, immutable

# HTML files should be revalidated more frequently
/*.html
  Cache-Control: public, max-age=0, must-revalidate

# Root index
/
  Cache-Control: public, max-age=0, must-revalidate

# JavaScript and CSS with hashes
/*.js
  Cache-Control: public, max-age=31536000, immutable

/*.css
  Cache-Control: public, max-age=31536000, immutable

# Fonts
/*.woff2
  Cache-Control: public, max-age=31536000, immutable

/*.woff
  Cache-Control: public, max-age=31536000, immutable

# Manifest and service workers
/manifest.json
  Cache-Control: public, max-age=0, must-revalidate

/sw.js
  Cache-Control: public, max-age=0, must-revalidate

# Security headers
/*
  X-Frame-Options: DENY
  X-Content-Type-Options: nosniff
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: geolocation=(self), microphone=(), camera=()
